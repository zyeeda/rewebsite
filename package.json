{
  "name": "rewebsite",
  "version": "0.1.0",
  "description": "A universal website boilerplate based on React, Redux, Node, Koa and etc.",
  "main": "./bin/server.js",
  "scripts": {
    "start": "node ./node_modules/better-npm-run start",
    "start-dev": "node ./node_modules/better-npm-run start-dev",
    "webpack-dev-server": "node ./node_modules/better-npm-run webpack-dev-server",
    "build": "webpack --verbose --colors --display-error-details --config webpack/config-dev.js"
  },
  "betterScripts": {
    "start": {
      "command": "node --harmony ./bin/server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "start-dev": {
      "command": "node --harmony ./bin/server.js",
      "env": {
        "NODE_PATH": "./src"
      }
    },
    "webpack-dev-server": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 128,
        "NODE_PATH": "./src"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zyeeda/rewebsite.git"
  },
  "keywords": [
    "universal",
    "isomorphic",
    "react",
    "redux",
    "koa",
    "webpack",
    "boilerplate",
    "babel"
  ],
  "author": "Rui Tang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zyeeda/rewebsite/issues"
  },
  "homepage": "https://github.com/zyeeda/rewebsite#readme",
  "dependencies": {
    "babel": "^5.8.23",
    "bunyan": "^1.5.1",
    "fs-plus": "^2.8.1",
    "jquery": "^2.1.4",
    "koa": "^1.0.0",
    "koa-bodyparser": "^2.0.1",
    "koa-bunyan-logger": "^1.2.0",
    "koa-compress": "^1.0.8",
    "koa-etag": "^2.0.0",
    "koa-fresh": "0.0.3",
    "koa-i18n": "^1.1.0",
    "koa-locale": "^1.0.0",
    "koa-onerror": "^1.2.1",
    "koa-router": "^5.1.2",
    "koa-static": "^1.4.9",
    "piping": "^0.2.0",
    "react": "^0.13.3",
    "webpack-isomorphic-tools": "^0.8.5"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "babel-core": "^5.8.23",
    "babel-loader": "^5.3.2",
    "babel-plugin-typecheck": "^1.2.0",
    "babel-runtime": "^5.8.20",
    "better-npm-run": "0.0.2",
    "css-loader": "^0.17.0",
    "json-loader": "^0.5.2",
    "node-sass": "^3.3.2",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^2.0.1",
    "style-loader": "^0.12.3",
    "webpack": "^1.12.1",
    "webpack-dev-server": "^1.10.1"
  }
}
